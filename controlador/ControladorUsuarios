<?php
    class ControladorUsuarios{
        //Funcion para llevar a cabo el inicio de seion
        static function validarLogin(){
            if(isset($_POST["entrar"])){

                $email = $_POST["email"];
                $password = $_POST["password"];

                $usuario= ModeloUsuarios::login($email,$password);

                ///////////////////////////////

                $arreglo= $usuario->fetch_all();
                //contar el numero de usuarios que ingresaron contando el numero de lineas
                $count = $usuario->num_rows;
                //comprobamos que se haya ingresado un usuario 
                if($count>0){
                    foreach($arreglo as $row => $item){
                        echo $item[1];
                    }
                    session_start();
                    echo '
                        <script>
                            window.location.href="index.php";
                        </script>
                    ';
                }else{
                    echo'
                        <script>
                            alert("El usuario no existe, es incorrecto o la contrase√±a es erronea");
                            window.location.href="Login.php";
                        </script>
                    ';
                }
            }
        }
    }
?>